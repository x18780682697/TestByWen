<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wen.test.coloruse.TestAndroidColorClassActivity"
    android:orientation="vertical"
    android:background="@android:color/holo_red_light">

    <Button
        android:id="@+id/btn_test_color_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待测颜色"/>

    <Button
        android:id="@+id/基准颜色"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#237237"/>

    <EditText
        android:id="@+id/et_alpha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="1.0"/>

    <Button
        android:id="@+id/btn_test_change_alpha_of_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点展示改变后的效果"/>

</LinearLayout>
