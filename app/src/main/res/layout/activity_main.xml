<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wen.testbywen.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_test_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/test_image"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/iv_test_animation"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show"
            android:onClick="onClickShow"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hide"
            android:onClick="onClickHide"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_test_set_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击设置壁纸"/>

    <Button
        android:id="@+id/btn_test_launch_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击测试跳转动画"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_test_set_status_bar_icon_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置状态栏图标为白色" />

        <Button
            android:id="@+id/btn_test_set_status_bar_icon_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置状态栏图标为黑色" />

    </LinearLayout>

</LinearLayout>
