<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wen.test.recycleview.TestItemDeleteAnimationActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_list_container"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <Button
        android:id="@+id/btn_add_one_with_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加1个（有动画）"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_delete_one_without_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除1个（无动画）"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_delete_one_with_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除1个（有动画）"
        android:onClick="onClick"/>

</LinearLayout>
